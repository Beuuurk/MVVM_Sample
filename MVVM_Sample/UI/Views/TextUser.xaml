<UserControl x:Class="MVVM_Sample.UI.Views.TextUser"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MVVM_Sample.UI.Views"
             mc:Ignorable="d" 
             d:DesignHeight="250" d:DesignWidth="400">
    <DockPanel LastChildFill="True">
        <Button Width="75" DockPanel.Dock="Bottom" Content="Close" Command="{Binding ShowText}" Margin="5" />
        <TextBox Text="{Binding ContentText}" Margin="5" />
    </DockPanel>
</UserControl>
