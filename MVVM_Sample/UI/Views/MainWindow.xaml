<Window x:Class="MVVM_Sample.UI.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MVVM_Sample.UI.Views"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel x:Name="MainDock" LastChildFill="true" >
        <Menu x:Name="MainMenu" DockPanel.Dock="Top" >
            <MenuItem x:Name="Actions" Header="Actions" >
                <MenuItem x:Name="AddWindowMenuItem" Header="Add Window..." Command="{Binding   AddWindow }" />
                <MenuItem x:Name="AddControlMenuItem" Header="Add Control..." Command="{Binding AddControl}" />
            </MenuItem>
        </Menu>
    </DockPanel>
</Window>
