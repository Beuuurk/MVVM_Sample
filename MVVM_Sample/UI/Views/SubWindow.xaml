<Window x:Class="MVVM_Sample.UI.Views.SubWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MVVM_Sample.UI.Views"
        mc:Ignorable="d"
        Title="SubWindow" Height="450" Width="800">
    <DockPanel LastChildFill="True">
        <Button Width="75" DockPanel.Dock="Bottom" Content="Close" Command="{Binding CloseWindow}" Margin="5" />
        <TextBox Text="{Binding ContentText}" Margin="5" />
    </DockPanel>
</Window>
